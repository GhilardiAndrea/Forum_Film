@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 style="color:white">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color:white">Crea un nuovo account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" style="color:white"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" style="color:white"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" style="color:white">Conferma Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nome" style="color:white"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cognome" style="color:white"></label>
                <input asp-for="Input.Cognome" class="form-control" />
                <span asp-validation-for="Input.Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Data_Nascita"style="color:white"></label>
                <input type="date" asp-for="Input.Data_Nascita" class="form-control" />
                <span asp-validation-for="Input.Data_Nascita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nazione" style="color:white"></label>
                <input asp-for="Input.Nazione" class="form-control" />
                <span asp-validation-for="Input.Nazione" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrati</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4 style="color:white">Use another service to register.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p style="color:white">
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715" style="color:white">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p style="color:white">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
